<style>
  .mood-container {
    max-width: 500px;
    margin: 40px auto;
    padding: 20px;
    background: white;
    border-radius: 10px;
    box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
  }

  .mood-title {
    text-align: center;
    font-size: 24px;
    color: #343a40;
    margin-bottom: 20px;
  }

  .btn-group {
    text-align: center;
    margin-top: 20px;
  }

  .btn-link {
    display: inline-block;
    margin: 5px;
    padding: 10px 15px;
    border-radius: 6px;
    text-decoration: none;
    font-weight: bold;
    transition: 0.3s ease;
  }

  .btn-show {
    background: #007bff;
    color: white;
  }

  .btn-back {
    background: #6c757d;
    color: white;
  }

  .btn-link:hover {
    opacity: 0.85;
    transform: scale(1.05);
  }
</style>

<div class="mood-container">
  <h1 class="mood-title">Editing Mood Detection</h1>

  <%= render "form", mood_detection: @mood_detection %>

  <div class="btn-group">
    <%= link_to "🔍 Show this mood detection", @mood_detection, class: "btn-link btn-show" %>
    <%= link_to "← Back to mood detections", mood_detections_path, class: "btn-link btn-back" %>
  </div>
</div>
